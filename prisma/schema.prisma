generator client {
  provider = "prisma-client-js"
  output   = "../src/.generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               Int       @id @default(autoincrement())
  name             String
  author           String
  url              String    @unique
  imageUrl         String
  description      String
  category         String?
  readmeLink       String?
  demoLink         String?
  repoLink         String?
  slackId          String?
  projectCreatedAt DateTime?
  projectUpdatedAt DateTime?
  minutesSpent     Int
  devlogsCount     Int
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt @default(now())
}

model ScrapedPage {
  id           Int      @id @default(autoincrement())
  page_number  Int
  last_scraped DateTime @default(now())
  valid        Boolean  @default(true)
}
